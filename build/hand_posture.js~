function triggerChanges() {
	$('#1\\.1joint_slider').trigger('change');
	$('#2\\.1_Joint_slider').trigger('change');
	$('#3\\.1_Joint_slider').trigger('change');
	$('#4\\.1_Joint_slider').trigger('change');
	$('#0\\.1_Joint_slider').trigger('change');
	$('#0\\.3_Joint_slider').trigger('change');
}
